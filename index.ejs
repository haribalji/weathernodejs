<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Bootstrap demo</title>
    <!-- <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous"> -->

    <style>

*{
    margin: 0;
    padding: 0;

}
p{

color:black;
}
.container{
    height:100vh;
    width: 1wp;
    background-image: url('https://images.unsplash.com/photo-1531512073830-ba890ca4eba2?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=3374&q=80');

    display: flex;
    flex-direction: row;
    justify-content:center;
    align-items: center;
}
.weather{
    height:500px;
    width:500px;
    
    display: flex;
    flex-direction:column;
    justify-content:space-evenly;
    align-items: center;

}
#weathercity{
    height: 100%;
    width: 100%;
    color: black;
}
.city{
    display: flex;
    flex-direction: row;
    justify-content:center;
    height: 50px;
    width: 80%;
    
    left:10%;

}

.grid-container {
  
    display: grid;
    grid-template-columns: repeat(2, 1fr); 
    gap: 10px; 
    padding: 10px;
    width: 80%;
  }
  .grid-item {
    background-color: #0d6efd; 

    padding: 20px; 
    text-align: center; 
    border: 0;
    border-radius: 15px;
    font-weight:500;
    font-size: 2.rem;
    /* font-style:normal; */
    color:#ffff ;
  
    background: linear-gradient(to right, #0d6efd, #0dcaf0);
  
  }
  .form{
    left: 15%;
    display: flex;
    flex-direction: row;
    justify-content:center;
    align-items: center;
  }
  #get{
    width: 100px;
    margin-left:2%;
    height: 35px;
    border: 0;
    border-radius: 15px;
    text-align: center;

  }
  #in{
    font-weight: bold;
    height: 35px;
     border: 0;
     border-radius: 15px;
    margin-left:5%;

  }
  .temp{
    color: back;

    font-size: 3.5rem;
  }
  .cityy{
    /* color: #ffffff; */
    font-size: 2rem;
    color: black;


  }
  #get:hover {
   background-color: rgb(87, 216, 128);
    transition: color 1s;
  }

      </style>

  </head>
  <body>
    <!-- <h1>Hello, world!</h1> -->
    <div class="container">
        <div class="weather">
          <div class="city">
          <form class="form" method="POST"  action="/submit" >
              <input type="text" class="in"id="in" id="weathercity" name="city"  placeholder="      Enter your city" required>
              <button  id="get" type="submit" >search</button>
            </form>
          </div>
         <% if(locals.result){%>
             <h1 class="temp"><%=result.current.temp_c%>Â°C</h1>

             <h4 class="cityy"><%=result.location.name%></h4>
        
          <div class="grid-container">
            <div  class="grid-item">Pressure:<%=result.current.pressure_in%></div>
            <div class="grid-item">Humidity:<%=result.current.humidity%>%</div>
            <div class="grid-item"><%=result.current.condition.text%></div>
            <div class="grid-item">wind:<%=result.current.wind_mph%>mp/h</div>
         
          </div>
          <%}else{%>
            <p><%="Result Not Found check in Google"%></P>
          <%}%>

        </div>
         
    </div>
    
  </body>
</html>
